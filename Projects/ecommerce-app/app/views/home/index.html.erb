<%# :name, :price, :size, :description, :model, :active, :quantity, :color , images:[] %>
<div class="container-fluid px-0 mx-2 p-md-2 p-lg-2  ">
  <div class="row m-2 m-md-3 m-lg-4 m-xl-5  ">
    <% @products.each do |product| %>
      <div class="col-6 col-sm-6 col-md-4 col-lg-3  col-xl-2 p-2 wrapper ">
        <div class="card card-style " style="" >
          <%#= image_tag( product.images[0] , class: "card-img-top")%>
          <%= image_tag( product.images[0].variant(resize: '300x300!') , class: "card-img-top") %>
          <div class="card-body ">
            <p class="card-title font-weight-bold lead"> <%= product.name %></p>
          </div>
          <ul class="list-group list-group-flush  ">
            <li class="list-group-item ">Rs. <%= product.price %></li>
            <li class="list-group-item">Size <%= product.size %></li>
          </ul>
          <div class="card-body">
            <%= link_to 'Show', home_path(product) ,class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
