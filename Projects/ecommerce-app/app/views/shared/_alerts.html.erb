<% if flash[:notice]  %>
  <br>
  <div class="alert alert-success alert-dismissible fade show mx-3" id="alert" role="alert">
    <strong><%= flash[:notice] %></strong>
  </div>
<% end %>

<% if flash[:alert] %>
  <br>
  <div class="alert alert-danger alert-dismissible fade show mx-3" id="alert" role="alert">
    <strong> <%= flash[:alert] %></strong>
  </div>
<% end %>
