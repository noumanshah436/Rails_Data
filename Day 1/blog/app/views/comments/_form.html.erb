<!-- form action="/articles/id/comments -->
<%= form_with(model: [ @article, @article.comments.build ], class:"form", local: false) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
